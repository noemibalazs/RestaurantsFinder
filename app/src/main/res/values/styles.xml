<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textViewStyle">@style/CustomTextStyle</item>
    </style>

    <style name="CustomTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textAppearance">@style/ItalicTextAppearance</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black_open</item>
    </style>

</resources>
